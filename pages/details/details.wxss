}
.fixFoot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.fixFoot .weui-flex{
  height: 100rpx;
  background-color:#f2f2f2; 
}
.fixFoot .weui-flex .weui-flex__item{
  background-color:#DE1280;
  margin:5px;
  text-align:center;
  color: #ffffff;
  align-self:center;
