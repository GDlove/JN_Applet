}
swiper image {
  width: 100%;
  height: 400rpx;
}
.detail-info{margin: 15rpx 10rpx;}
.detail-info-u{
  background-color: #ffffff;
}
.detail-info-d{
  padding:10px;
  font-size:15px;
  line-height:1.4;
  background-color:#fff;
  margin-top:15rpx;
}
.detail-info-title{
  font-size: 40rpx;
}
.detail-info-price{
