.saleProduct-Price{
  font-size: 12px;
  line-height: 1.5;
  text-align:right;
  padding-left:15px; 
  position: relative;
}
.saleProduct-Price::before{
  content: '';
  position: absolute;
  top: 10%;
  left:0;
  height: 80%;
  border-left: 1px solid #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scalex(.4);
  transform: scalex(.4);
}
.saleProduct-Price-current{
  display: block;
  color:#f02b2b;
  font-size:15px;
  font-weight:bold;

}
.saleProduct-Price-original{
  text-decoration:line-through;
  color: #999;
  font-size:13px;
}

