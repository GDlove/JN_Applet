<!--product.wxml-->
<template name="productItem">
  <view class="saleProduct">
    <navigator url="/pages/details/details?id={{link}}">
      <image class="saleProduct-img" src="{{pic}}" background-size="cover"></image>  
      <view class="saleProduct-Mesg">
          <!-- <text class="saleProduct-limitTime">仅剩4天16小时</text> -->
          <view class="saleProduct-Name">
              <text class="saleProduct-Name-title ellipsis">{{title}}</text>
              <text class="saleProduct-Name-caption ellipsis">{{caption}}</text>
          </view>
          <view class="saleProduct-Price">
              限时购买价：<text>￥{{price}}</text>
          </view>
      </view>
    </navigator>
  </view>
</template>

